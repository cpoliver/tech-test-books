{
  "name": "tech-test-books",
  "version": "1.0.0",
  "description": "generate and serve random, real-sounding book data",
  "main": "index.js",
  "repository": "https://github.com/cpoliver/tech-test-shopping-cart.git",
  "author": "Charles P. Oliver <cpoliver@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "./node_modules/.bin/babel app --out-dir dist --ignore test.js",
    "start": "node ./dist/index.js",
    "dev": "babel-node ./app/index.js",
    "test": "mocha --require babel-polyfill --compilers js:babel-register app/**/*.test.js",
    "test:watch": "mocha --require babel-polyfill --compilers js:babel-register app/**/*.test.js --watch",
    "lint": "./node_modules/.bin/eslint .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "casumo/configurations/es6"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ]
    }
  },
  "dependencies": {
    "husky": "^0.13.4",
    "lint-staged": "^3.6.1",
    "restify": "^4.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.2.3",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "eslint": "^4.0.0",
    "eslint-config-casumo": "^1.3.0",
    "mocha": "^3.3.0",
    "sinon": "^2.1.0",
    "supertest": "^3.0.0"
  }
}
